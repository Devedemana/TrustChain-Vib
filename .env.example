# TrustChain Production Environment Configuration
# Copy this file to .env.local and replace with your actual values

# ==== PRODUCTION SETTINGS ====
# Set to 'true' to enable production mode with real IC canister
REACT_APP_USE_PRODUCTION=true

# Your real Internet Computer canister ID
# Replace 'your-actual-canister-id-here' with your deployed canister ID
REACT_APP_CANISTER_ID=your-actual-canister-id-here

# Network configuration
REACT_APP_NETWORK=ic
REACT_APP_IC_HOST=https://icp0.io

# Development override (set to 'false' to use real service in development)
REACT_APP_USE_MOCK_DATA=false

# ==== OPTIONAL FEATURES ====
# WebSocket endpoint for real-time features (if available)
REACT_APP_WEBSOCKET_URL=wss://your-websocket-endpoint.com

# Enable advanced features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_FRAUD_DETECTION=true
REACT_APP_ENABLE_REALTIME=true

# ==== DEVELOPMENT SETTINGS ====
# Local development canister ID (for testing)
CANISTER_ID_TRUSTCHAIN_BACKEND=rdmx6-jaaaa-aaaah-qcaiq-cai

# DFX network (local or ic)
DFX_NETWORK=ic
