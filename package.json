{
  "name": "trustchain-frontend",
  "version": "1.0.0",
  "description": "TrustChain - Decentralized Academic Credential Verifier Frontend",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:production": "cross-env REACT_APP_USE_PRODUCTION=true npm run build",
    "build:windows": "build-production.bat",
    "setup:production": "node setup-production.js",
    "deploy:vercel": "npm run build:production && vercel",
    "deploy:netlify": "npm run build:production && netlify deploy --prod --dir=dist",
    "deploy:ic": "npm run build:production && dfx deploy --network ic",
    "setup:ic": "powershell -ExecutionPolicy Bypass -File setup-ic.ps1",
    "deploy:ic:full": "npm run setup:ic && npm run deploy:ic",
    "test": "vitest",
    "test:frontend": "vitest src/",
    "test:backend": "vitest tests/",
    "test:watch": "vitest --watch",
    "serve": "webpack serve --mode development --open",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "@dfinity/agent": "^2.4.1",
    "@dfinity/auth-client": "^2.4.1",
    "@dfinity/candid": "^2.4.1",
    "@dfinity/principal": "^2.4.1",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.0",
    "@types/qrcode": "^1.5.5",
    "@types/recharts": "^1.8.29",
    "axios": "^1.2.0",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.6",
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-swipeable": "^7.0.2",
    "recharts": "^3.1.0",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.0",
    "@babel/preset-typescript": "^7.18.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.0",
    "dotenv": "^16.5.0",
    "dotenv-webpack": "^8.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^23.0.0",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "style-loader": "^3.3.0",
    "tailwindcss": "^4.1.11",
    "ts-loader": "^9.4.0",
    "typescript": "^4.9.0",
    "vitest": "^1.6.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.0"
  },
  "keywords": [
    "blockchain",
    "education",
    "credentials",
    "internet-computer",
    "react"
  ],
  "author": "TrustChain Team",
  "license": "MIT"
}
